<main>
    {{#with hero}}
    <div class="hero">
        <h1 class="hero_title">{{title}}</h1>
        <p class="hero_text">{{description}}</p>
        {{#with button}}
        <a href="{{url}}" class="hero_btn">{{text}}</a>
        {{/with}}
    </div>
    {{/with}}

    {{#with about}}
    <div class="about">
        <h3 class="about_title">{{heading}}</h3>
        <p class="about_info">{{info}}</p>
    </div>
    {{/with}}
</main>