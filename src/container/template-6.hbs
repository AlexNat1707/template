<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">

    {{#with info}}
    <div class="main_info">
        <h1 class="main_title">{{title}}</h1>
        <p class="main_text">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">

            <input type="checkbox" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

{{#with updates}}
<div class="upd">
    <h6 class="upd_title">{{title}}</h6>
    {{#each list}}
    <div class="upd_list">
        <img class="list_img" src="#">
        <div class="list_info">
            <strong>{{nickname}}</strong>
            <p>{{description}}</p>
        </div>
    </div>
    {{/each}}
    <div class="show_all">
        {{#with show_all}}
        <a href="{{url}}" class="show_all_link">{{text}}</a>
        {{/with}}
    </div>
</div>
{{/with}}

{{#with expirience}}
<div class="exp">
    <div class="exp_head">
        <h2 class="exp_title">{{title}}</h2>
        <button class="exp_btn">{{badge}}</button>
    </div>

    <div class="exp_list">
        {{#each list}}
        <div class="list_content">
            <strong class="list_name">{{name}}</strong>
            <p class="exp_list_info">{{details}}</p>
        </div>
        {{/each}}
    </div>

</div>
{{/with}}

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">@ 2023</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
    </div>
</footer>